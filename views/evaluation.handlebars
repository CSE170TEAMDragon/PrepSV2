<!doctype html>

<html>
<head>
	<title>Question Evaluation</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="css/bootstrap.min.css" rel="stylesheet">
	<link href="css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="css/bootstrapTest.css" rel="stylesheet">
	<link href="css/evaluation.css" rel="stylesheet">
	<link href="css/levelbtn.css" rel="stylesheet">

	<link rel="stylesheet" href="/css/hamburgerbar.css">

</head>

<body>

	<header>
  			<button class="hamburger">&#9776;</button>
  			<button class="cross">&#735;</button>
  			<p class="myButton">{{levelName}}</p>

	</header>

	<div class="menu">
 	 <ul>
    	<a href="/question"><li>Questions</li></a>
    	<a href="/achievement"><li>Achievement</li></a>
    	<a href="/learnmore"><li>Learn More</li></a>
    	<a href="/"><li>Log out</li></a>
  	</ul>
	</div>
<!-- 
	<h4 class= "questionBox"><b>Current Question:</b> {{questionSelected}}</h4> -->


<div class="pageTitle" id= "title">
	<h2> Self-Evaluation</h2>
	<h4> Evaluate your response to the question: <b>"{{questionSelected}}"</b></h4>
<!-- 	<h5 style="color:green"> Please fill out the below evaluation before continuing</h5> -->
</div>

	{{> popup}}

	<div class="evaluationBox">

		<div class="columnHeadings">
			<div class="row" >
				<div class="col-xs-6"> </div>
				<div class="col-xs-2">
					<h4 style="margin-top:10px" align="left"> Poor</h4>
				</div>
				<div class="col-xs-2">
					<h4 style="margin-top:10px" align="left"> Okay</h4>
				</div>
				<div class="col-xs-2">
					<h4 style="margin-top:10px" align="left"> Great</h4>
				</div>
			</div> <!-- end row -->

		


		</div> <!-- end column headings -->

		{{#each evalBox}}
		<div class="row" id="eachRow">

			<div class="col-xs-6">
				<p id="c{{evalID}}"> {{text}} </p>
			</div>

			<div class="col-xs-2" align="center">
				<label class="radio-inline">
			  		<input type="radio" name="inlineRadioOptions{{evalID}}" id="inlineRadio{{evalID}}0" value="Poor"> </label>
			 </div>

			<div class="col-xs-2" align="center">
				<label class="radio-inline">
				  <input type="radio" name="inlineRadioOptions{{evalID}}" id="inlineRadio{{evalID}}1" value="Okay"> </label>
		  	</div>

			<div class="col-xs-2" align="center">
				<label class="radio-inline">
				  <input type="radio" name="inlineRadioOptions{{evalID}}" id="inlineRadio{{evalID}}2" value="Great"> </label>
			</div>

		</div>	<!-- end row -->
		{{/each}}

	</div>

	<div id = "buttonDiv">
		<!--<button type="button" class="btn btn-primary" id="submitbutton" style=" float:left">Submit</button>-->
		<button type="button" class="btn btn-primary" id="donebutton"style=" float:right" disabled>
		   <a href="/feedback?q={{questionSelected}}&id={{id}}">
    		Continue
    		</a>
    	</button>
    </div>
    
    <p id="name2" visibility="hidden">{{id}}</p>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/introHCI.js"></script>
</body>

</html>
